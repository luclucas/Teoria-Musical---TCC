<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cor_fundo"
    tools:context=".view.moduloI.clavesol.TelaClaveSol">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textview29"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:text="Nesta seção estudaremos a Clave de Sol, que é este símbolo bonito abaixo. Todo mundo o vê em todo canto, mas que ninguém sabe para que serve.\n\nHoje é o seu dia de sorte e, depois dessa aula, poderá explicar para os outros a utilidade da Clave de Sol. "
        android:textColor="@color/cor_texto"
        android:textSize="@dimen/tamanho_texto"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginLeft="188dp"
        android:layout_marginTop="30dp"
        android:paddingTop="20dp"
        android:text="𝄞"
        android:textColor="@color/cor_texto"
        android:textSize="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview29" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/botao_notas_avan_i"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/botao_voltar_avancar"
        android:backgroundTint="@color/verde"
        android:text="Avançar"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/tamanho_texto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/botao_car_volt_i"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/botao_voltar_avancar"
        android:backgroundTint="@color/cinza"
        android:text="Voltar"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/tamanho_texto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
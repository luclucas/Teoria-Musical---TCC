<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.moduloI.notas.TelaNotas"
    android:background="@color/cor_fundo">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textview12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="@dimen/tamanho_texto"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Nesta seção estudaremos sobre as notas musicais"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textview13"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
        android:layout_margin="20dp"
     app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
     app:layout_constraintTop_toBottomOf="@id/textview12"
        android:textSize="@dimen/tamanho_texto"
        android:textColor="@color/black"
        android:text="@string/notas_notas"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview13"
        android:textSize="@dimen/tamanho_texto"
        android:textColor="@color/black"
        android:text="Caso tenha ficado alguma dúvida sobre altura, volte para a lição sobre características e revise o conteúdo"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/botao_notas_avan_i"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginRight="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textAllCaps="false"
        android:textSize="@dimen/tamanho_texto"
        android:text="Avançar"
        android:textColor="@color/white"
        android:backgroundTint="@color/verde"
        android:background="@drawable/botao_voltar_avancar"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/botao_car_volt_i"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textAllCaps="false"
        android:textSize="@dimen/tamanho_texto"
        android:text="Voltar"
        android:textColor="@color/white"
        android:backgroundTint="@color/cinza"
        android:background="@drawable/botao_voltar_avancar"/>

</androidx.constraintlayout.widget.ConstraintLayout>
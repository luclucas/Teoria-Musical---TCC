<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/marrom"
    tools:context=".TelaQuiz">

    <TextView
        android:id="@+id/textNumero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="25dp"
        android:text="1 / 10"
        android:textStyle="bold"
        android:textColor="@color/amarelo"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textPergunta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:gravity="center"
        android:text="Aqui vem a pergunta"
        android:textColor="@color/amarelo"
        android:textSize="25sp"
        
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textPergunta"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/alternativaI"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/borda_botao_quiz"
            android:onClick="selecionarBotao"
            android:text="Alternativa 1"
            android:textSize="15sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/alternativaII"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/borda_botao_quiz"
            android:onClick="selecionarBotao"
            android:text="Alternativa 2"

            android:textSize="15sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/alternativaIII"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/borda_botao_quiz"
            android:onClick="selecionarBotao"
            android:text="Alternativa 3"
            android:textSize="15sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/alternativaIV"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/borda_botao_quiz"
            android:onClick="selecionarBotao"
            android:text="Alternativa 4"
            android:textSize="15sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>